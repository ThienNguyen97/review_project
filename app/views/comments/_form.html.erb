<div class="posts">
  <div class="textarea-wrapper--top-level">
    <%= form_for [post, comment], method: :post, class: "reply" do |f| %>
      <%= f.hidden_field :post_id, value: post.id, id: "post-id" %>
      <%= f.hidden_field :user_id, value: current_user.id, id: "user-id" %>
      <div class="form-group">
        <%= f.text_area :content, class: "textarea text-content form-control", col: "30", rows: "9",
          placeholder: t("content")%>
      </div>
      <div class="load_btn">
        <button class="btn_1 border-0 create-comment" id="submitBtn"><%= t("submit") %></button>
      </div>
  <% end %>
  </div><br><br>
</div>
