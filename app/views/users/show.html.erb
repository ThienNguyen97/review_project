<% provide(:title, @user.name) %>
<% provide :header_partial, "shared/header_partial/title" %>

<div class="site-section bg-light">
  <div class="container">
    <div class="alert"></div>
    <div class="row">
      <aside class="col-md-4">
        <div class="card card-profile">
          <div class="card-body text-center">
            <%= gravatar_for(@user) %>
            <br>
            <strong class="my-2"><%= link_to @user.name, @user %></strong>
            <%= button_to "Edit Profile", edit_user_registration_path, 
                  :class => "btn btn-outline-primary my-2", :method => :get %>
            <hr>
            <section class="stats">
              <%= render "shared/stats" %>
            </section>
            <hr>
             <%= render "follow_form" if user_signed_in? %>
          </div>
        </div>
      </aside>

      <div class="col-md-8">
        <% if current_user? @user%>
          <ol class="posts">
            <button id= "up-post-btn" type="button" class="btn btn-primary border_box mb-2"><%= t ("Up new post") %></button>
          </ol>
          <section id = "up-post-form"></section>
        <% end %>
        <% if @user.posts.any? %>
          <ol class="posts">
            <%= render @posts %>
          </ol>
          <%= paginate @posts, theme: "twitter-bootstrap-4" %>
        <% else %>
          <p class="text-primary text_center"><%= t ("You dont have any post!") %></p>
        <% end %>
      </div>

    </div>
  </div>
</div>
<script>
    <%= render partial: "show.js.erb" %>
</script>
