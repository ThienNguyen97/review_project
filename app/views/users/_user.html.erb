<li>
  <%= gravatar_for user, size: Settings.user.gravatar_size_small %>
  <%= link_to user.name, user %>
  <% if current_user.has_role? :admin && current_user != user %>
    | <%= link_to t(".delete"), user, method: :delete,
                                  data: { confirm: t("confirm_message") } %>
  <% end %>
</li>
