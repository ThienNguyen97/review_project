<% provide :title, t("page_title.login") %>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
      <form class="login100-form validate-form">
        <span class="login100-form-title p-b-33">
          <%= t "page_title.login" %>
        </span>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100", placeholder: "Email" %>
          <span class="focus-input100-1"></span>
          <span class="focus-input100-2"></span>
        </div>

        <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
          <%= f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: "Password" %>
          <span class="focus-input100-1"></span>
          <span class="focus-input100-2"></span>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="txt2 m-t-20">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span style="margin-left: 0px;"> Remember me </span>
            <% end %>
          </div>
        <% end %>

        <div class="container-login100-form-btn m-t-20">
          <button class="login100-form-btn">
            <%= f.submit t("page_title.login"), class: "login100-form-btn" %>
          </button>
        </div>
    <% end %>
        <div class="text-center m-t-20">
          <span class="txt1">
            <p><%= link_to t("page_title.forgot_password"), new_user_password_path %></p>
          </span>

          <span class="txt2 hov1">
            <p>Create an account? <%= link_to t("page_title.signup"), new_user_registration_path %></p>
          </span>
        </div>
      </form>
    </div>
  </div>
</div>
